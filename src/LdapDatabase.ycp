    boolean urlComponentsMatch( map url1, map url2 )
    {
        if ( (string)url1["protocol"]:"" != (string)url2["protocol"]:"" )
        {
            return false;
        }
        if ( (string)url1["target"]:"" != (string)url2["target"]:"" )
        {
            return false;
        }
        if ( (integer)url1["port"]:0 != (integer)url2["port"]:0 )
        {
            return false;
        }
        return true;
    }

