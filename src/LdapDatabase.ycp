                acllist[newIndex] = acllist[selected]:nil;
                acllist[selected] = oldItem;
                updateTable = true;
                selected = newIndex;
            }
        }
        else if ( handler_cmd == `pb_down )
        {
            if ( selected != nil &&  selected < (size(acllist)-1) )
            {
                integer newIndex = selected + 1;
                map oldItem = acllist[newIndex]:nil;
                acllist[newIndex] = acllist[selected]:nil;
                acllist[selected] = oldItem;
                updateTable = true;
                selected = newIndex;
            }
        }

        if ( updateTable )
